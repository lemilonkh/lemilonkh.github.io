---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---
<BaseLayout title={frontmatter.title}>
  <slot />
</BaseLayout>

<style is:inline>
  strong, a, th {
    color: var(--primary-dark-color);
  }

  #content a {
    text-decoration: underline;
  }

  th {
    min-width: 150px;
  }

  table td:last-child {
    width: 100%;
  }

  #content {
    color: black;
  }
</style>
